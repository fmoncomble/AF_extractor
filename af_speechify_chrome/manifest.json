{
	"manifest_version": 2,
	"name": "af_speechify",

	"version": "0.6",

	"description": "Extrait les textes de l'Académie française et les enregistre au format XML pour import dans TXM",
	"homepage_url": "https://github.com/fmoncomble/af_speechify",
	"icons": {
		"48": "icons/af-48.png",
		"96": "icons/af-96.png"
	},

	"permissions": ["activeTab", "downloads", "storage", "*://www.academie-francaise.fr/*"],
	
	"background": {
    "page": "background.html",
    "persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["*://www.academie-francaise.fr/les-immortels/discours-et-travaux-academiques*"],
			"js": ["content_scripts/content_discours.js", "jszip.min.js"],
			"css": ["content_scripts/content_green.css"]
		},
		{
			"matches": ["*://www.academie-francaise.fr/dire-ne-pas-dire/recherche*"],
			"js": ["content_scripts/content_dnpd.js", "jszip.min.js"],
			"css": ["content_scripts/content_red.css"]
		},
		{
			"matches": ["*://www.academie-francaise.fr/questions-de-langue*"],
			"js": ["content_scripts/content_qdl.js", "jszip.min.js"],
			"css": ["content_scripts/content_red.css"]
		}
	]

}
